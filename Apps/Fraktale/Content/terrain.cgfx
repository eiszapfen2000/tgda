    float specularFactor = 0.0f;

    if ( normalisedHeight < 0.05f )
    {
        diffuseColor = sandColor;
        specularFactor = sandSpecularFactor;
    }
    else if ( normalisedHeight < 2.0f/3.0f )
    {
        diffuseColor = grassColor;//lerp(sandColor, grassColor, max(normalisedHeight * 1.5f + 0.5f, 1.0f));
        specularFactor = grassSpecularFactor;//lerp(sandSpecularFactor, grassSpecularFactor, max(normalisedHeight * 1.5f + 0.5f, 1.0f));
    }
    else
    {
        diffuseColor = stoneColor;//lerp(grassColor, stoneColor, (normalisedHeight * 3.0f) - 2.0f);
        specularFactor = stoneSpecularFactor;//lerp(grassSpecularFactor, stoneSpecularFactor, (normalisedHeight * 3.0f) - 2.0f);
    }

    float ambient = 0.2f;
